{% extends 'base.html.twig' %}

{% block body %}
    <h1>Hello World</h1>

    <p>GAME RULES</p>

    <table border="1">
        <tr>
            <td>ID</td>
            <td>NAME</td>
            <td>IMAGE</td>
            <td>OWNER ADDRESS</td>
            <td>OWNER SINCE</td>
            <td>CURRENT PRICE</td>
            <td>TARGET PRICE</td>
            <td>TARGET ADDRESS</td>
            <td>TARGET TIME</td>
            <td>CAN BE CLAIMED</td>
        </tr>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.image }}</td>
                <td>{{ entity.ownerAddress }}</td>

                {% if entity.ownerSince is defined and entity.ownerSince %}
                    <td>{{ entity.ownerSince | date('Y-m-d H:i:s O') }}</td>
                {% else %}
                    <td>&nbsp;</td>
                {% endif %}

                <td>{{ entity.currentPrice }}</td>
                <td>{{ entity.targetPrice }}</td>

                {% if entity.canBeClaimed %}
                    <td>{{ entity.targetAddress }}</td>
                {% else %}
                    <td>Cannot be claimed. Wait until {{ entity.targetTimeFormatted }}.</td>
                {% endif %}

                <td>{{ entity.targetTimeFormatted }}</td>
                <td>{{ entity.canBeClaimed ? 'YES' : 'NO' }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
